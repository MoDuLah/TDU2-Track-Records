<Window x:Class="TDU2_Track_Records.LapInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lap Input" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" FontSize="20">
    <GroupBox Margin="10" Header="Laps Calculator">
        <StackPanel>
            <GroupBox Header="Laps (1-20):" Margin="20,0,20,0">
                <StackPanel>
                    <TextBox x:Name="txt_Laps" Width="50" MaxLength="2" TextChanged="Txt_Laps_TextChanged"/>
                    <StackPanel x:Name="lapFieldsPanel" Orientation="Vertical"/>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Button Content="Cancel" Click="Cancel_Click" Margin="20,0,20,0" IsTabStop="False" Focusable="False"/>
                <Button Content="Submit" Click="Submit_Click" HorizontalAlignment="Center" Margin="20,0,20,0"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</Window>