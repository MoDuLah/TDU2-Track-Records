<Window x:Class="TDU2_Track_Records.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDU2_Track_Records"
        xmlns:properties="clr-namespace:TDU2_Track_Records.Properties"
        mc:Ignorable="d"
        Title="Settings" MinWidth="382" MinHeight="350" HorizontalContentAlignment="Stretch" MaxWidth="400" MaxHeight="400">
    <Window.Background>
        <ImageBrush ImageSource="/Images/BG.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="9" Grid.ColumnSpan="10">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TabControl Margin="0,0,0,0"  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <!-- Opacity Tab -->
                <TabItem Header="Opacity">
                    <StackPanel Margin="10">
                        <Label Content="Main Window Opacity" />
                        <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Width="300" Margin="5" TickFrequency="0.01" Value="1" >
                            <Slider.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#00000000"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Slider.Foreground>
                        </Slider>
                        <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat='Opacity: {0:F1}'}"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="16" 
                   Margin="10"/>
                    </StackPanel>
                </TabItem>

                <!-- Language Tab -->
                <TabItem Header="Language" IsEnabled="False" Visibility="Collapsed">
                    <StackPanel Margin="10">
                        <Label Content="Language" />
                        <ComboBox x:Name="LanguageComboBox" Margin="5">
                            <ComboBoxItem Content="English" />
                        </ComboBox>
                    </StackPanel>
                </TabItem>

                <!-- Unit Tab -->
                <TabItem Header="Unit">
                    <StackPanel Margin="10">
                        <Label Content="Unit" />
                        <ComboBox x:Name="UnitComboBox" Margin="5" SelectedIndex="0" SelectionChanged="UnitComboBox_SelectionChanged">
                            <ComboBoxItem Content="Metric" />
                            <ComboBoxItem Content="Imperial" />
                        </ComboBox>
                    </StackPanel>
                </TabItem>

                <!-- Cars Tab -->
                <TabItem Header="Cars">
                    <StackPanel Margin="10">
                        <Label Content="Add Car" />
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Car Name:" VerticalAlignment="Center" Width="100" />
                                <TextBox x:Name="CarNameTextBox" Width="200" Margin="5" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Car Class:" VerticalAlignment="Center" Width="100" />
                                <TextBox x:Name="CarClassTextBox" Width="200" Margin="5" />
                            </StackPanel>
                            <CheckBox x:Name="CarActiveCheckBox" Content="Active" Margin="5" />
                            <Button Content="Add Car" Width="100" Margin="5" Click="AddCarButton_Click" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <!-- Tracks Tab -->
                <TabItem Header="Tracks">
                    <StackPanel Margin="10">
                        
                        <StackPanel Orientation="Vertical" Margin="5">
                            <GroupBox Header="Add Track">
                                <StackPanel>
                                    <GroupBox Header="Track Name:" >
                                        <TextBox x:Name="TrackNameTextBox" Margin="5" />
                                    </GroupBox>
                                    <GroupBox Header="Lap Length:">
                                        <TextBox x:Name="LapLengthTextBox" Width="200" Margin="5" />
                                    </GroupBox>
                                    <Button Content="Add Track" Width="100" Margin="5" Click="AddTrackButton_Click" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
        <StackPanel Grid.Row="10" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="12" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button Content="Cancel" Margin="5" Click="CancelButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70" MinHeight="40" Foreground="White" />
            <Button Content="Save" Margin="5" Click="SaveButton_Click" VerticalAlignment="Center" MinWidth="70" MinHeight="40" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>