                </GroupBox>
                <GroupBox Header="Stats" Margin="5">
                    <StackPanel Margin="5">
                        <GroupBox Margin="0,0,0,5" Grid.Column="2" Grid.Row="1" Header="Acceleration" VerticalAlignment="Top">
                            <DockPanel>
                                <Slider x:Name="AccelerationStatSlider" Minimum="0" Maximum="100" Width="200" Margin="5" ToolTip="{Binding ElementName=AccelerationStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" SmallChange="1" TickPlacement="Both" LargeChange="10" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding ElementName=AccelerationStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" VerticalAlignment="Center" MinWidth="20" />
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="2" Grid.Row="1" Header="Speed" MinWidth="250" VerticalAlignment="Top" Margin="0,0,0,5">
                            <DockPanel>
                                <Slider x:Name="SpeedStatSlider" Minimum="0" Maximum="100" Width="200" Margin="5" ToolTip="{Binding ElementName=SpeedStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" SmallChange="1" TickPlacement="Both" LargeChange="10" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding ElementName=SpeedStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" VerticalAlignment="Center" MinWidth="20" />
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="2" Grid.Row="2" Header="Braking" MinWidth="250" VerticalAlignment="Top" Margin="0,0,0,5">
                            <DockPanel>
                                <Slider x:Name="BrakingStatSlider" Minimum="0" Maximum="100" Width="200" Margin="5" ToolTip="{Binding ElementName=BrakingStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" SmallChange="1" TickPlacement="Both" LargeChange="10" IsSnapToTickEnabled="True"/>
                                <TextBlock MinWidth="20" Text="{Binding ElementName=BrakingStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" VerticalAlignment="Center" ClipToBounds="True" />
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="2" Grid.Row="3" Header="Difficulty" MinWidth="250" VerticalAlignment="Top" Margin="0,0,0,5">
                            <DockPanel>
                                <Slider x:Name="DifficultyStatSlider" Minimum="1" Maximum="5" Width="200" Margin="5" ToolTip="{Binding ElementName=DifficultyStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}"  SmallChange="1" TickPlacement="Both" LargeChange="1" IsSnapToTickEnabled="True" />
                                <TextBlock MinWidth="20" Text="{Binding ElementName=DifficultyStatSlider, Path=Value, Mode=OneWay, StringFormat={}{0:0}}" ClipToBounds="True" VerticalAlignment="Center" />
                            </DockPanel>
                        </GroupBox>

                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Engine" Margin="5">
                    <StackPanel>
                        <GroupBox Header="Displacement" Margin="5">
                            <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                <TextBox DockPanel.Dock="Left" MinWidth="146" x:Name="EngineDisplacementTextBox" MaxLength="4" />
                                <TextBlock Text="cc" Margin="0,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Header="Type" Margin="5">
                            <ComboBox x:Name="EngineTypeComboBox" Margin="5" VerticalAlignment="Stretch">
                                <ComboBoxItem Content="Flat 4-cylinder" Tag="0"/>
                                <ComboBoxItem Content="L-twin" Tag="1"/>
                                <ComboBoxItem Content="Rotary engine" Tag="2"/>
                                <ComboBoxItem Content="V-twin" Tag="3"/>
                                <ComboBoxItem Content="V10" Tag="4"/>
                                <ComboBoxItem Content="V12" Tag="5"/>
                                <ComboBoxItem Content="V6" Tag="6"/>
                                <ComboBoxItem Content="V8" Tag="7"/>
                                <ComboBoxItem Content="W12" Tag="8"/>
                                <ComboBoxItem Content="W16" Tag="9"/>
                                <ComboBoxItem Content="flathead 6-cylinder" Tag="10"/>
                                <ComboBoxItem Content="inline 4-cylinder" Tag="11"/>
                                <ComboBoxItem Content="inline 5-cylinder" Tag="12"/>
                                <ComboBoxItem Content="inline 6-cylinder" Tag="13"/>

                            </ComboBox>
                        </GroupBox>
                        <GroupBox Header="Drive" Margin="5">
                            <ComboBox x:Name="EngineDriveComboBox" Margin="5" VerticalAlignment="Stretch">
                                <ComboBoxItem Content="FWD" Tag="FWD"/>
                                <ComboBoxItem Content="AWD" Tag="AWD"/>
                                <ComboBoxItem Content="RWD" Tag="RWD"/>
                            </ComboBox>
                        </GroupBox>
                        <GroupBox Header="Placement" Margin="5">
                            <ComboBox x:Name="EnginePositionComboBox" Margin="5" VerticalAlignment="Stretch">
                                <ComboBoxItem Content="Front" Tag="Front"/>
                                <ComboBoxItem Content="Central" Tag="Central"/>
                                <ComboBoxItem Content="Rear" Tag="Rear"/>
                            </ComboBox>
                        </GroupBox>
                        <GroupBox Header="Max Torque" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="MaxTorqueTextBox" Width="50" Margin="5,5,5,5" MaxLength="3" TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="{Binding Source={x:Static p:Settings.Default}, Path=torque, Mode=OneWay}" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                <TextBlock Text=" @" VerticalAlignment="Center" />
                                <TextBox x:Name="MaxTorqueRPMTextBox" Width="50" Margin="5" MaxLength="4" TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="RPM" VerticalAlignment="Center" Padding="0,0,5,0" Margin="2,0,5,0" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Max Power" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="MaxPowerTextBox" Width="50" Margin="5" VerticalAlignment="Center" MaxLength="3" TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="{Binding Source={x:Static p:Settings.Default}, Path=horsepower, Mode=OneWay}" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                <TextBlock Text=" @" VerticalAlignment="Center" />
                                <TextBox x:Name="MaxPowerRPMTextBox" Width="50"  Margin="5,0,5,0" VerticalAlignment="Center" MaxLength="4" TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="RPM" VerticalAlignment="Center" Margin="2,0,5,0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Performance" Margin="5">
                    <StackPanel>
                        <GroupBox x:Name="Gearbox" Header="Gearbox" Margin="5">
                            <ComboBox x:Name="GearboxComboBox" Margin="5" VerticalAlignment="Stretch">
                                <ComboBoxItem Content="Automatic" Tag="Auto"/>
                                <ComboBoxItem Content="Mechanical" Tag="Mech"/>
                                <ComboBoxItem Content="Sequential" Tag="Seq"/>
                            </ComboBox>
                        </GroupBox>
                        <GroupBox x:Name="Gears" Header="# Gears" Margin="5">
                            <ComboBox x:Name="GearsComboBox" Margin="5" VerticalAlignment="Stretch">
                                <ComboBoxItem Content="7"/>
                                <ComboBoxItem Content="6"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                        </GroupBox>
                        <GroupBox Header="Top Speed" Margin="5">
                            <DockPanel>
                                <TextBox x:Name="TopSpeedTextBox" Margin="5" Width="100" MaxLength="3" TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="{Binding Source={x:Static p:Settings.Default}, Path=speed, Mode=OneWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Header="Acceleration" Margin="5">
                            <DockPanel>
                                <TextBox x:Name="AccelerationTextBox" Width="100"
                                         local:PlaceholderBehavior.PlaceholderText="0.00" 
                                         PreviewTextInput="TwoDecimalPointsTextBox_PreviewTextInput"
                                           DataObject.Pasting="TwoDecimalPointsTextBox_DataObject_Pasting"
                                           TextChanged="TwoDecimalPointsTextBox_TextChanged" MaxLength="4" />
                                <TextBlock Text="Sec." VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Header="Weight" Margin="5">
                            <DockPanel>
                                <TextBox x:Name="WeightTextBox" Width="100" MaxLength="4"  TextChanged="TextBox_TextChanged" />
                                <TextBlock Text="{Binding Source={x:Static p:Settings.Default}, Path=weight, Mode=OneWay}" VerticalAlignment="Center" Padding="0,0,5,0"/>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
            </DockPanel>
            <!-- Vehicle Performance Details -->

        </Grid>
    </Grid>
</Window>
