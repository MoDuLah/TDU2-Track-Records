<UserControl x:Class="TDU2_Track_Records.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="CircularProgressBarControl" Width="100" Height="100">
    <Grid>
        <!-- Smaller canvas size if needed to match the smaller arc radius -->
        <Canvas Width="80" Height="80">
            <!-- Decrease the Canvas size for smaller arcs -->
            <Ellipse Width="80" Height="80" Stroke="DarkGray" StrokeThickness="10" Visibility="Hidden"/>
            <Path x:Name="progressPath"
              Stroke="{Binding StrokeColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeThickness="15" 
              Data="{Binding ArcData}" />
        </Canvas>
        <TextBlock Text="{Binding ProgressText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White" FontSize="16" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
